<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" side="LEFT"
         style="-fx-background-color: #FFFFFF;" tabClosingPolicy="UNAVAILABLE"
         xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="GUI.UserPage" fx:id="tabPane">
    <tabs>
        <Tab text="Search">
            <content>
                <HBox>
                    <children>
                        <VBox fx:id="leftSearchVbox" alignment="TOP_CENTER" maxHeight="1.7976931348623157E308"
                              maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                              spacing="10.0" style="-fx-border-color: #000000;fx-border-width: 10;">
                            <children>
                                <TextField fx:id="bookInfoSearchField" maxHeight="-Infinity" maxWidth="-Infinity"
                                           minHeight="-Infinity" minWidth="-Infinity" onAction="#productSearch"
                                           text="Search">
                                    <VBox.margin>
                                        <Insets top="10.0"/>
                                    </VBox.margin>
                                </TextField>
                                <ListView fx:id="productsListView" maxHeight="1.7976931348623157E308"
                                          maxWidth="-Infinity" minHeight="${productsListView.prefHeight}"
                                          minWidth="-Infinity" prefWidth="455.0" VBox.vgrow="ALWAYS">
                                </ListView>
                            </children>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </VBox>
                        <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308"
                              maxWidth="1.7976931348623157E308" prefHeight="${leftSearchVbox.prefHeight}" spacing="10.0"
                              style="-fx-border-color: #000000;fx-border-width: 10;">
                            <children>
                                <ImageView fx:id="rightSideImage" fitHeight="300.0" fitWidth="300" pickOnBounds="true"
                                           preserveRatio="true">
                                </ImageView>
                                <TextArea prefHeight="200.0" prefWidth="200.0"/>
                                <Button onAction="#addToCart" text="Add to cart"/>
                            </children>
                            <padding>
                                <Insets left="10.0" right="10.0"/>
                            </padding>
                        </VBox>
                    </children>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </HBox>
            </content>
        </Tab>
        <Tab text="Previous Purchases">
            <content>
                <ListView fx:id="historyListView" maxWidth="-Infinity" minHeight="${productsListView.prefHeight}"
                          minWidth="-Infinity" prefWidth="455.0"
                          style="-fx-border-color: #000000;fx-border-width: 10;"/>
            </content>
        </Tab>
        <Tab text="Personal details">
            <content>
                <GridPane style="-fx-border-color: #000000;fx-border-width: 10;" vgap="20.0">
                    <VBox spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="First name"/>
                        <TextField fx:id="firstNameField" disable="true"/>
                    </VBox>

                    <VBox spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <Label text="Email:"/>
                        <TextField fx:id="emailField" disable="true"/>
                    </VBox>

                    <VBox spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="3">
                        <Label text="Address:"/>
                        <TextField fx:id="addressField" disable="true"/>
                    </VBox>

                    <HBox spacing="20" GridPane.rowIndex="5">
                        <Button fx:id="editButton" onAction="#handleEditButton" text="Edit"/>
                        <Button fx:id="saveChangesButton" onAction="#showConfirmationDialog" text="Save changes"
                                visible="false"/>
                    </HBox>
                    <VBox spacing="10.0" GridPane.rowIndex="4">
                        <children>
                            <Label text="Telephone number"/>
                            <TextField fx:id="telephoneNumberField" disable="true"/>
                        </children>
                    </VBox>
                    <VBox spacing="10.0" GridPane.rowIndex="1">
                        <children>
                            <Label text="Last name"/>
                            <TextField fx:id="lastNameField" disable="true"/>
                        </children>
                    </VBox>
                    <padding>
                        <Insets left="10.0" top="10.0"/>
                    </padding>
                </GridPane>
            </content>
        </Tab>
        <Tab text="Cart">

            <content>
                <VBox spacing="10.0">
                    <children>
                        <ListView fx:id="cartListView" maxWidth="-Infinity" prefWidth="500.0">


                        </ListView>
                        <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="${cartListView.prefWidth}"
                                text="Buy"/>
                    </children>
                </VBox>

            </content>


        </Tab>
    </tabs>
</TabPane>
